# First parameter is the server's name
SERVER_NAME="$1"

###########################
# Miscellaneous functions #
###########################

# Indicate failure when loading of shared library fails
lib_fail() {
	echo "Could not load main library" 1>&2
	exit 1
}

# Handle an event by calling all active 
# event handling scrips
handle_event() {
	local EVENT="$1"

	# All event handling scripts must have the 
	# *.eh suffix
	for EVENT_HANDLER in "$SERVER_EVENT_HANDLERS_DIR"/*.eh; do
		$EVENT_HANDLER "$SERVER_NAME" "$EVENT"
		return $?
	done
}

###############
# Main script #
###############

# Source main library
source /usr/local/libexec/minectl/minelib 2> /dev/null || lib_fail

if [ $# -ne 1 ]; then
	fail "Usage: `basename $0` <server_name>" 
fi

# Change to server's directory
minelib_access_server "$SERVER_NAME" || minelib_fail 

# Read the server's stderr fifo
while read EVENT; do
	handle_event "$EVENT"
	test $? -eq 3 && break
done < "$SERVER_STDERR"

echo "Exitting event monitor" 1>&2
